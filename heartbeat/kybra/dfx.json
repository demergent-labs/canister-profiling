{
  "canisters": {
    "heartbeat": {
      "type": "custom",
      "build": "python -m kybra heartbeat src/heartbeat.py src/heartbeat.did",
      "post_install": ".kybra/heartbeat/post_install.sh",
      "candid": "src/heartbeat.did",
      "wasm": ".kybra/heartbeat/heartbeat.wasm",
      "gzip": false
    },
    "timer": {
      "type": "custom",
      "build": "python -m kybra timer src/timer.py src/timer.did",
      "post_install": ".kybra/timer/post_install.sh",
      "candid": "src/timer.did",
      "wasm": ".kybra/timer/timer.wasm",
      "gzip": false
    }
  }
}
